<UserControl x:Class="Calendar.Year"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Calendar"
             mc:Ignorable="d" 
             d:DesignHeight="704" Width="1680">
    <Grid x:Name="Main">
        <Grid.RowDefinitions>
            <RowDefinition Height="320"/>
            <RowDefinition Height="320"/>
            <RowDefinition Height="64"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="280"/>
            <ColumnDefinition Width="280"/>
            <ColumnDefinition Width="280"/>
            <ColumnDefinition Width="280"/>
            <ColumnDefinition Width="280"/>
            <ColumnDefinition Width="280"/>
        </Grid.ColumnDefinitions>
        <TextBlock x:Name="SelectedDate" Grid.Column="2" Margin="0,10" Grid.Row="2" VerticalAlignment="Center" TextAlignment="Center" TextWrapping="NoWrap" Text="" Grid.ColumnSpan="2" FontSize="18"/>

    </Grid>
</UserControl>
