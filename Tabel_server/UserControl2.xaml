                <DataGridTextColumn Binding="{Binding day8, Converter={StaticResource convSpan}}" Header="8"   />
                <DataGridTextColumn Binding="{Binding day9, Converter={StaticResource convSpan}}" Header="9"   />
                <DataGridTextColumn Binding="{Binding day10, Converter={StaticResource convSpan}}" Header="10"   />
