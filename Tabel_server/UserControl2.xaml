                <DataGridTextColumn Binding="{Binding day15, Converter={StaticResource convSpan}}" Header="15"   />
                <DataGridTextColumn Binding="{Binding day16, Converter={StaticResource convSpan}}" Header="16"   />
                <DataGridTextColumn Binding="{Binding day17, Converter={StaticResource convSpan}}" Header="17"   />
                <DataGridTextColumn Binding="{Binding day18, Converter={StaticResource convSpan}}" Header="18"   />
