<UserControl x:Class="Tabel_server.UCSettings"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Tabel_server"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="33*"></ColumnDefinition>
            <ColumnDefinition Width="127*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <VirtualizingStackPanel>
            <Button Content="Цвета" Style="{DynamicResource ButtonStyle1}" Click="Button_Click"></Button>
            <Button></Button>
        </VirtualizingStackPanel>
        <Grid Grid.Column="1" x:Name="GridForUC" HorizontalAlignment="Stretch"  VerticalAlignment="Stretch"    />
    </Grid>
</UserControl>
